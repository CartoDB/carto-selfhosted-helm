{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "M4",
            "worker_nodes_instance_count": 2,
            "master_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "IGNORE_ALL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "url": "{SHA_ARCHIVE}",
              "path": "/.vib/carto/goss/goss-accounts-www"
            },
            "remote": {
              "workload": "deploy-carto-accounts-www"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "timeout_minutes": 50,
            "resources": {
              "url": "{WORKSPACE_WWW_SOURCE_URL}",
              "path": "."
            },
            "host_aliases": [
              "carto.vmw"
            ],
            "endpoint": "lb-carto-router-https",
            "env": {
              "CI": "true",
              "RUN_ID": "{VIB_ENV_CYPRESS_RUN_ID}",
              "RECORD_KEY": "{VIB_ENV_CYPRESS_RECORD_KEY}"
            }
          }
        }
      ]
    }
  }
}
