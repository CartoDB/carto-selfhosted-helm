{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "L8",
            "worker_nodes_instance_count": 2,
            "master_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "IGNORE_ALL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "timeout_minutes": 50,
            "resources": {
              "url": "{WORKSPACE_WWW_SOURCE_URL}",
              "path": "."
            },
            "endpoint": "lb-carto-router-https",
            "env": {
              "FIREBASE_API_KEY": "{VIB_ENV_CYPRESS_FIREBASE_API_KEY}",
              "CYPRESS_CONNECTION_CREDENTIALS": "{VIB_ENV_CYPRESS_CONNECTION_CREDENTIALS}"
            }
          }
        }
      ]
    }
  }
}
