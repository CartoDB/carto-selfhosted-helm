{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "M8",
            "worker_nodes_instance_count": 1,
            "master_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "vuln_type": [
              "OS"
            ]
          }
        }
      ]
    }
  }
}
