{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        }
      ]
    },
    "verify": {
      "context": {
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{TARGET_PLATFORM}",
          "size": {
            "name": "L8",
            "worker_nodes_instance_count": 2,
            "master_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "url": "{SHA_ARCHIVE}",
              "path": "/.vib/carto/goss/goss-accounts-www"
            },
            "remote": {
              "workload": "deploy-carto-accounts-www"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "url": "https://{VIB_ENV_PAT_CYPRESS_REPOSITORY}@github.com/beltran-rubo/cloud-native/archive/vib-cypress.tar.gz",
              "path": "/cloud-native-main/workspace-www"
            },
            "endpoint": "lb-carto-router-https",
            "env": {
              "CYPRESS_BASE_URL": "https://carto.vmw",
              "RECORD_KEY": "{VIB_ENV_CYPRESS_RECORD_KEY}",
              "CYPRESS_FIREBASE_API_KEY": "{VIB_ENV_CYPRESS_FIREBASE_API_KEY}",
              "CYPRESS_CLIENT_SECRET": "{VIB_ENV_CYPRESS_CLIENT_SECRET}",
              "CYPRESS_MANAGEMENT_API_CLIENT_SECRET": "{VIB_ENV_CYPRESS_MANAGEMENT_API_CLIENT_SECRET}",
              "CYPRESS_CONNECTION_CREDENTIALS": "{VIB_ENV_CYPRESS_CONNECTION_CREDENTIALS}"
            }
          }
        }
      ]
    }
  }
}
