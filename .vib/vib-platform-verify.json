{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/.vib/carto/"
        },
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}",
          "size": {
            "name": "L8",
            "worker_nodes_instance_count": 2,
            "master_nodes_instance_count": 1
          }
        }
      },
      "actions": [
        {
          "action_id": "trivy",
          "params": {
            "threshold": "IGNORE_ALL",
            "vuln_type": [
              "OS"
            ]
          }
        },
        {
          "action_id": "goss",
          "params": {
            "resources": {
              "path": "goss/goss-accounts-www"
            },
            "remote": {
              "workload": "deploy-carto-accounts-www"
            }
          }
        },
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "path": "cypress"
            },
            "endpoint": "lb-carto-router-http"
          }
        }
      ]
    }
  }
}
