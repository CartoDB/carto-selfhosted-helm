{
  "phases": {
    "package": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/chart"
        }
      },
      "actions": [
        {
          "action_id": "helm-package"
        },
        {
          "action_id": "helm-lint"
        }
      ]
    },
    "verify": {
      "context": {
        "resources": {
          "url": "{SHA_ARCHIVE}",
          "path": "/.vib/carto/"
        },
        "runtime_parameters": "{CARTO_RUNTIME_PARAMETERS}",
        "target_platform": {
          "target_platform_id": "{VIB_ENV_TARGET_PLATFORM}"
        }
      },
      "actions": [
        {
          "action_id": "cypress",
          "params": {
            "resources": {
              "path": "cypress"
            },
            "endpoint": "lb-carto-router-http"
          }
        }
      ]
    }
  }
}
